{% extends "parent.njk" %}
{% block main %}
    <main>
        <h1>Admin Dashboard</h1>

        <section>
            <h2>Create Event</h2>
            <form action="/admin/create" method="POST">
                <input type="text" name="title" placeholder="Title" required>
                <input type="text" name="apiKey" placeholder="API Key" required>
                <input type="text" name="id" placeholder="ID" required>
                <button type="submit">Create</button>
            </form>
        </section>

        <section>
            <h2>Pending Event Requests</h2>
            {% for request in requests %}
            <div style="border: 1px solid #ccc; padding: 1rem; margin: 1rem 0;">
                <h3>{{ request.title }}</h3>
                <p>Requested by: {{ request.user.email }}</p>
                <p>Created: {{ request.createdAt }}</p>
                <form action="/admin/requests/{{ request.id }}/approve" method="post" style="display:inline;">
                    <button type="submit">Approve</button>
                </form>
            </div>
            {% else %}
            <p>No pending requests</p>
            {% endfor %}
        </section>

        <section>
            <h2>All Events</h2>
            <ul>
                {% for event in events %}
                    <li>
                        <strong>{{ event.title }}</strong> (ID: {{ event.id }})
                        <form action="/admin/{{ event.id }}/delete" method="post" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                    </li>
                {% endfor %}
            </ul>
        </section>
    </main>
{% endblock %}
